# Include test files
recursive-include tests *.py

# Exclude build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.so
global-exclude *.c
global-exclude *.cpp
global-exclude __pycache__
global-exclude .ipynb_checkpoints
